<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@color/White" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:emojicon="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.rockerhieu.emojicon.example.MainActivity$PlaceholderFragment"
        android:id="@+id/statusEditor"
        >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="I'm feeling ..."
            android:gravity="left|center_vertical"
            android:id="@+id/imfeelingbutton"/>

        <com.rockerhieu.emojicon.EmojiconEditText
            android:id="@+id/editEmojicon"
            emojicon:emojiconSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:lines="3"
            android:text="@string/status_cause_spinner"
            >
            <requestFocus/>
        </com.rockerhieu.emojicon.EmojiconEditText>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:text="caused by"/>
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:prompt="@string/status_cause_spinner"
                android:spinnerMode="dialog"
                />
        </LinearLayout>

    </LinearLayout>


    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/toolRadio"

        android:layout_alignParentBottom="true"
        >
        <RadioButton android:id="@+id/button_one"
            android:minWidth="30dip"
            android:minHeight="33dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Write"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/radio_colors"
            android:background="@drawable/radio_selector_red"/>
        <RadioButton android:id="@+id/button_two"
            android:minWidth="30dip"
            android:minHeight="33dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Emotes"
            android:button="@null"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/radio_colors"
            android:background="@drawable/radio_selector_orange"
            />
        <RadioButton android:id="@+id/button_five"
            android:minWidth="30dip"
            android:minHeight="33dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Feels"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/radio_colors"
            android:background="@drawable/radio_selector_darkgreen"/>
    </RadioGroup>

</RelativeLayout>